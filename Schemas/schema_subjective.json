{
  "vfx_properties": {
    "startTime": {
      "type": "number",
      "format": "float",
      "description": "Time (in seconds) when the VFX starts",
      "examples": [
        0.2
      ]
    },
    "endTime": {
      "type": "number",
      "format": "float",
      "description": "Time (in seconds) when the VFX ends",
      "examples": [
        5.0
      ]
    },
    "shape": {
      "type": "string",
      "description": "General shape of the VFX (e.g., 'sphere', 'cone', 'beam', 'splash')"
    },
    "color": {
      "type": "string",
      "description": "Dominant color(s) of the VFX Hex code(s)",
      "examples": [
        "#FF0000"
      ]
    },
    "projectileCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of projectiles (if the VFX involves projectiles)"
    },
    "animation": {
      "type": "string",
      "description": "Brief description of the animation (e.g., 'pulse', 'glow', 'fading', 'static')",
      "examples": [
        "static",
        "flickering"
      ]
    },
    "texture": {
      "type": "string",
      "description": "Description of the texture (e.g., 'fire', 'ice', 'firey')"
    },
    "otherVisuals": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Any other noteworthy visual details"
      }
    },
    "required": [
      "color",
      "startTime",
      "endTime"
    ]
  }
}